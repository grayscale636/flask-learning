{
  "version": 2,
  "builds": [
    {
      "src": "app.py", // Ubah ini sesuai dengan nama file utama aplikasi Flask Anda
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)", // Menangani file statis seperti CSS, gambar, dll.
      "dest": "static/$1" // Asumsi folder statis Anda adalah "static"
    },
    {
      "src": "/(.*)",
      "dest": "app.py" // Ubah ini juga sesuai dengan nama file utama aplikasi Anda
    }
  ],
  "cleanUrls": true // Menghapus ekstensi .html dari URL
}
